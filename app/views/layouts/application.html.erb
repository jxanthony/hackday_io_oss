<!DOCTYPE html>
<html>
  <head>
    <title>Hackday</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

  </head>
  <body>

    <% if flash[:error] %>
    <div class="alert alert-error">
      <%= flash[:error] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
    <% end %>

    <% if flash[:message] %>
    <div class="alert alert-success">
      <%= flash[:message] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>  
    <% end %>

    <% if current_user %>

      <div class="container-fluid">
        <div class="row-fluid">
          
          <% if current_user %>
          <div class="span4">
          <% else %>
          <div class="span7">
          <% end %>
            <div class="yam-logo">
              <%= image_tag('yammer-logo.png', :class => 'yam-logo-img') %>
            </div>
            <div class="yam-logo-text">
              <h1><%= link_to "Hack Day!", root_path %></h1>
            </div>
            <p class="lead">Democratizing hack day judging.</p>
          </div>

          <% if current_user %>
            <div class="span3">
              <h3 style="margin-top:18px;"><%= link_to "Add Your Hack", new_hack_path, :class => "btn btn-primary" %></h3>
            </div>
          <% end %>

          <div id="user-block" class="span4">
              <% if current_user %>
                <div id="user-points">
                  <span>Remaining points</span><br/>
                  <span class="bankroll"><%= current_user.bankroll %></span>
                </div>
                <img src="<%= current_user.mugshot_url ? current_user.mugshot_url.gsub("48x48", "110x110") : '' %>" class="img-circle" />
              <% else %>
                <a href="/auth/facebook" id="sign_in">
                  <img src="/assets/login_cta.jpg"/>
                </a>
              <% end %>
          </div>

        </div>

        <div class="row-fluid">
          <% if current_user.admin? %>
            <div class="span4 main">
          <% else %>
            <div class="span7 main">
          <% end %>
            <%= yield %>
          </div>
          <div class="span4">
            <h3>Recent Activity</h3>
            <%= render "hacks/activity" %>
          </div>
          <% if current_user.admin? %>
            <div class="span4">
              <h3>Judges' Corner</h3>
              <%= render "layouts/admin" %>
            </div>
          <% end %>
        </div>    

      </div><!-- end of container -->

    <% else %>

      <div class="signin-yammer">
        <a href="/auth/yammer" class="btn btn-primary"><h2>Sign in with Yammer</h2></a>
      </div>

    <% end %>


    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-34495492-2', 'herokuapp.com');
      ga('send', 'pageview');
    </script>

  </body>
</html>
