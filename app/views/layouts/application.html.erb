<!DOCTYPE html>
<html>
  <head>
    <title>Hackday</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

  </head>
  <body>

    <% if flash[:error] %>
    <div class="alert alert-error">
      <%= flash[:error] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
    <% end %>

    <% if flash[:message] %>
    <div class="alert alert-success">
      <%= flash[:message] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>  
    <% end %>


    <div class="container-fluid">
      <div class="row-fluid">

        <div class="span7">
          <h1><%= link_to "SharePoint Hack Day!", root_path %></h1>
          <p class="lead">Democratizing hack day judging. Freedom from Lauren's tyranny at last!</p>
        </div>

        <div id="user-block" class="span4">
            <% if current_user %>
              <div id="user-points">
                <span>Remaining points</span><br/>
                <span class="bankroll"><%= current_user.bankroll %></span>
              </div>
              <img src="https://graph.facebook.com/<%= current_user.uid %>/picture?width=110&height=110" class="img-circle" />
            <% else %>
              <a href="/auth/facebook" id="sign_in">
                <img src="/assets/login_cta.jpg"/>
              </a>
            <% end %>
        </div>

      </div>

      <div class="row-fluid">
        <div class="span7 main">
          <%= yield %>
        </div>
        <div class="span4">
          <h3>Recent Activity</h3>
          <%= render "hacks/activity" %>
        </div>
      </div>    

    </div><!-- end of container -->


    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-34495492-2', 'herokuapp.com');
      ga('send', 'pageview');
    </script>

  </body>
</html>
