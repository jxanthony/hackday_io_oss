.icon-wrapper
  - is_admin     = @hack && @hack.hackday.has_admin?(user)
  - admin_suffix = is_admin ? ' (JUDGE)' : ''
  = link_to image_tag(user.mugshot_url, |
                      alt: user.name + admin_suffix, |
                      class: [ "img-circle user-mugshot", |
                               ("icon-judge" if is_admin) ], |
                      size: '45x45'), |
            user |
  - if is_admin
    %span.glyphicon.glyphicon-star