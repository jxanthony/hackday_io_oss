<!DOCTYPE html>
<html>
  <head>
    <title>Hack Tracker</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag "http://www.google.com/s2/favicons?domain=www.yammer.com" %>

  </head>
  <body>

    <% if flash[:error] %>
    <div class="alert alert-error">
      <%= flash[:error] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
    <% end %>

    <% if flash[:message] %>
    <div class="alert alert-success">
      <%= flash[:message] %>
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>  
    <% end %>

    <% if current_user %>

      <div class="container-fluid">
        <div class="row-fluid">
          
          <% if current_user %>
          <div class="span4">
          <% else %>
          <div class="span7">
          <% end %>
            <div class="yam-logo">
              <%= image_tag('yammer-logo.png', :class => 'yam-logo-img') %>
            </div>
            <div class="yam-logo-text">
              <h1><%= link_to "Hack Tracker", root_path %></h1>
            </div>
            <p class="lead">Decentralizing Yammer Hackdays</p>
          </div>

          <% if current_user %>
            <div class="span3">
              <h3 style="margin-top:18px;"><%= link_to "Add Your Hack", new_hack_path, :class => "btn btn-primary" %></h3>
            </div>
          <% end %>

          <div id="user-block" class="span4">
              <% if current_user %>
                <div class="user-mugshot">
                  <%= render :partial => 'mugshot', :locals => {:user => current_user, :large => true, :placement => 'bottom'} %>
                </div>
              <% else %>
                <a href="/auth/facebook" id="sign_in">
                  <img src="/assets/login_cta.jpg"/>
                </a>
              <% end %>
          </div>

        </div>

        <div class="row-fluid">
          <% if current_user.admin? %>
            <div class="span4 main">
          <% else %>
            <div class="span7 main">
          <% end %>
            <%= yield %>
          </div>
          <div class="span4">
            <h3>Recent Activity</h3>
            <%= render "hacks/activity" %>
          </div>
          <% if current_user.admin? %>
            <div class="span4">
              <h3>Judges' Corner</h3>
              <%= render "layouts/admin" %>
            </div>
          <% end %>
        </div>    

      </div><!-- end of container -->

    <% else %>

      <div class="signin-yammer">
        <a href="/auth/yammer" class="btn btn-primary"><h2>Sign in with Yammer</h2></a>
      </div>

    <% end %>


